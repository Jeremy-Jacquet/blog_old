{% extends 'frontend_layout.twig' %}

{% import 'macros/form.twig' as form %}

{% block content %}

    <!-- HEADER -->
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">
            <!-- Masthead Avatar Image-->
            <img class="masthead-avatar mb-5" src="assets/img/avatar/avatar_admin.svg" alt="">
            <!-- Masthead Heading-->
            <h1 class="masthead-heading mb-0">Jérémy JACQUET</h1>
            <!-- Icon Divider-->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Masthead Subheading-->
            <p class="masthead-subheading font-weight-light mb-0">Développeur PHP / MySQL</p>
        </div>
    </header>

    <div class="container">

        <!-- LAST POSTS -->
        <section class="page-section post" id="actu">
                <div class="container">
                    <!-- Posts Section Heading-->
                    <div class="text-center">
                        <h2 class="page-section-heading text-secondary mb-0 d-inline-block">Derniers articles</h2>
                    </div>
                    <!-- Icon Divider-->
                    <div class="divider-custom">
                        <div class="divider-custom-line"></div>
                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                        <div class="divider-custom-line"></div>
                    </div>
                    <!-- Posts Grid Items-->
                    <div class="row justify-content-center">
                        {% for article in articles %}
                            <!-- Posts Items-->
                            <div class="col-md-6 col-lg-4 mb-5">
                                <div class="post-item mx-auto" data-toggle="modal" data-target="#post-{{ article.id }}">
                                    <div class="post-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                        <div class="post-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                                    </div><img class="img-fluid" src="assets/img/post/post-{{ article.id }}.png" alt="Log Cabin"/>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
        </section>

        <!-- Post Modal-->
        {% for article in articles %}
            <div class="post-modal modal fade" id="post-{{ article.id }}" tabindex="-1" role="dialog" aria-labelledby="#post-{{ article.id }}Label" aria-hidden="true">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="fas fa-times"></i></span></button>
                        <div class="modal-body text-center">
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="col-lg-8">
                                        <!-- Post Modal - Title-->
                                        <h2 class="post-modal-title text-secondary mb-0">Log Cabin</h2>
                                        <!-- Icon Divider-->
                                        <div class="divider-custom">
                                            <div class="divider-custom-line"></div>
                                            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                            <div class="divider-custom-line"></div>
                                        </div>
                                        <!-- Post Modal - Image--><img class="img-fluid rounded mb-5" src="assets/img/post/post-{{ article.id }}.png" alt="Log Cabin"/>
                                        <!-- Post Modal - Text-->
                                        <p class="mb-5">Article n°{{ article.id }} --- {{ article.sentence }}</p>
                                        <button class="btn btn-primary" href="#" data-dismiss="modal"><i class="fas fa-times fa-fw"></i>Close Window</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        <!-- ALL POSTS -->
        <section class="page-section bg-primary text-white" style="margin-bottom: 100px" id="articles">
            <div class="container">
                <!-- About Section Heading-->
                <div class="text-center">
                    <h2 class="page-section-heading d-inline-block text-white">Tous les articles</h2>
                </div>
                <!-- Icon Divider-->
                <div class="divider-custom divider-light">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>
                <!-- About Section Content-->
                <div class="row">
                    <div class="col-lg-3 ml-auto">
                        <h3>Categorie 1</h3>
                        <p class="lead">
