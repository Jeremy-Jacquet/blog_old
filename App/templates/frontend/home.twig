                <div class="modal-content">
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="fas fa-times"></i></span></button>
                    <div class="modal-body text-center">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <!-- Post Modal - Title-->
                                    <h2 class="post-modal-title text-secondary mb-0">Envoyer un message</h2>
                                    <!-- Icon Divider-->
                                    <div class="divider-custom">
                                        <div class="divider-custom-line"></div>
                                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                        <div class="divider-custom-line"></div>
                                    </div>

                                    <form action="#" method="#">
                                        <div class="form-group col-xs-6">
                                            <input type="text" id="name" name="name" placeholder="Votre nom" required>
                                        </div>
                                        <div class="form-group col-xs-6">
                                            <input type="email" id="email" name="email" placeholder="Votre email" required>
                                        </div>
                                        <div class="form-group mx-auto">
                                            <textarea id="message" name="message" cols="30" rows="10" placeholder="Votre message" required></textarea>
                                        </div>
                                    </form>
                                    <button type="submit" class="btn btn-primary">Envoyer<i class="fas fa-paper-plane"></i></button>
                                    <button class="btn btn-primary" href="#" data-dismiss="modal">Fermer<i class="fas fa-times fa-fw"></i></button>
                                </div>
                            </div>
                        </div>
