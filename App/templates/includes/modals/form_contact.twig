{% import 'macros/form.twig' as form %}

<!-- Contact Modal -->
<div class="post-modal modal fade" id="form-contact" tabindex="-1" role="dialog" aria-labelledby="#form-contactLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="fas fa-times"></i></span></button>
            <div class="modal-body text-center">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <!-- Post Modal - Title-->
                            <h2 class="post-modal-title text-secondary mb-0">Envoyer un message</h2>
                            <!-- Icon Divider-->
                            <div class="divider-custom">
                                <div class="divider-custom-line"></div>
                                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                <div class="divider-custom-line"></div>
                            </div>

                            <form action="contact" method="#">
                                {{ form.input('name', 'Votre nom', {require: true}) }}
                                {{ form.input('email', 'Votre email', {type: 'email', require: true}) }}
                                {{ form.textarea('message', 'Votre message', {require: true}) }}
                            </form>
                            <button type="submit" class="btn btn-primary">Envoyer<i class="fas fa-paper-plane"></i></button>
                            <button class="btn btn-primary" href="#" data-dismiss="modal">Fermer<i class="fas fa-times fa-fw"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>