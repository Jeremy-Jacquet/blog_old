{% macro input(name, label, require, value = null, options = []) %}
    <div class="form-group {{ options.class }}">
    <label for ="{{ name }}">{{ label }}</label>
        <input type="{{ options.type ?: 'text' }}" class="form-control" id="{{ name }}" name="{{ name }}" value="{{ value }}" {{ require }}>
    </div>
{% endmacro %}

{% macro textarea(name, label, require, value = null, options = []) %}
    <div class="form-group {{ options.class }}">
        <label for =="{{ name }}">{{ label }}</label>
        <textarea class="form-control" id="{{ name }}" name="{{ name }}" rows="10" cols="50" {{ require }}>{{ value }}</textarea>
    </div>
{% endmacro %}