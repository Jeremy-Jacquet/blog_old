{% macro input(name, placeholder = null, options = []) %}
    <div class="form-group {{ options.class }}">
        {% if options.label %}
            <label for ="{{ name }}">{{ options.label }}</label>
        {% endif %}
        <input type="{{ options.type ?: 'text' }}" class="form-control" id="{{ name }}" name="{{ name }}" placeholder="{{ placeholder }}" {{ options.require ? 'required' }}>
    </div>
{% endmacro %}

{% macro textarea(name, value = null, options = []) %}
    <div class="form-group {{ options.class }}">
        {% if options.label %}
            <label for ="{{ name }}">{{ options.label }}</label>
        {% endif %}
        <textarea class="form-control" id="{{ name }}" name="{{ name }}" rows="10" cols="50" {{ options.require ? 'required' }}>{{ value }}</textarea>
    </div>
{% endmacro %}

